{
  "name": "ipad-interface",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "homepage": "",
  "author": "Sam Elie <samradelie@gmail.com>",
  "keywords": [
    "budo",
    "browserify",
    "choo",
    "postcss"
  ],
  "repository": {
    "type": "git",
    "url": ".git",
    "web": "/"
  },
  "dependencies": {
    "bulma-slider": "^2.0.0",
    "choo": "^6.13.0",
    "choo-async": "^0.1.1",
    "choo-log": "^8.0.0",
    "choo-ssr": "^0.2.1",
    "core-decorators": "^0.20.0",
    "cors": "^2.8.4",
    "fastclick": "^1.0.6",
    "fastify": "^1.12.1",
    "fastify-static": "^0.14.0",
    "intrinsic-scale": "^3.0.3",
    "lodash": "^4.17.11",
    "nanocomponent": "^6.5.2",
    "normalize.css": "^8.0.0",
    "raf-loop": "^1.1.3",
    "tachyons": "^4.11.1",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-decorators": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "autoprefixer": "^9.3.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "budo": "^11.5.0",
    "concurrently": "^4.0.1",
    "cssnano-cli": "^1.0.5",
    "ejs-cli": "^2.0.0",
    "envify": "^4.1.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.1",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.0",
    "postcss-simple-vars": "^5.0.1",
    "terser": "^3.10.4"
  },
  "scripts": {
    "start:web": "NODE_ENV=development ejs-cli client/index.ejs > public/index.html && NODE_ENV=development budo client/index.js:bundle.js --live --dir public/ --serve bundle.js -- -t babelify -t envify",
    "start:css": "postcss client/postcss/index.css -o public/main.css -m -w",
    "start": "npm-run-all -l -p start:web start:css",
    "build:js": "NODE_ENV=production ejs-cli client/index.ejs > public/index.html && browserify client/index.js -t [ envify --NODE_ENV production ] -t babelify  | terser > public/bundle.min.js",
    "build:css": "postcss client/postcss/index.css -o public/main.css && cssnano < public/main.css > public/main.min.css",
    "build": "npm-run-all -l -s build:js build:css",
    "server:dev": "nodemon server/index.js",
    "server": "node server/index.js"
  },
  "prettier": {
    "useTabs": false,
    "bracketSpacing": true,
    "tabWidth": 1,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "jsxBracketSameLine": false,
    "parser": "babylon",
    "semi": false
  }
}
